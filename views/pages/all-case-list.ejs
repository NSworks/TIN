<%- include('../fragments/header.ejs') %>

    <main>
        <h2>Lista wszystkich spraw</h2>
        <table class="table-list">
            <thead>
                <tr>
                    <th>Sprawa</th>
                    <th>Status</th>
                    <th>Akcje</th>
                </tr>
            </thead>
            <tbody>
            <% for (let ca of cases) { %>
                <tr>
                    <td><%= ca.caseName %></td>
                    <td><%= ca.caseStatus%></td>
                    <td>
                        <ul class="list-actions">
                            <li><a href="/cases/details/<%=ca._id%>" class="list-actions-button-details">Szczegóły</a></li>
                            <li><a href="/cases/edit/<%=ca._id%>" class="list-actions-button-edit">Edytuj</a></li>
                            <li><a href="/cases/delete/<%=ca._id%>" class="list-actions-button-delete">Usuń</a></li>
                        </ul>
                    </td>
                </tr>
            <% } %>

            </tbody>
        </table>
        <p><a class="button-add" href="/cases/add">Dodaj nową sprawę do bazy</a></p>

    </main>

<%- include('../fragments/footer.ejs') %>